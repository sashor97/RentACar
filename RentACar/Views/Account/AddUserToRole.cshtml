@model RentACar.Models.AddToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}

<h2>Add User To Role</h2>

@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.UserEmail)
        @Html.DropDownListFor(m => m.UserEmail, new SelectList(Model.users), new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Role)
        @Html.DropDownListFor(m => m.Role, new SelectList(Model.roles), new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Add role</button>
}

