@model IEnumerable<RentACar.Models.Kategorija>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            
            <a href="/Kategorijas/PrikaziVozilaKategorija/@item.KategorijaId">@item.Name</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.KategorijaId }) |
            @Html.ActionLink("Details", "Details", new { id=item.KategorijaId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.KategorijaId })
        </td>
    </tr>
}

</table>
