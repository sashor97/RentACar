@model RentACar.Models.Kategorija
@{
    ViewBag.Title = "PrikaziVozilaKategorija";
}

<h2>Возила што припаѓаат на категорија <b>@Model.Name</b> се:</h2>

<table>
    @foreach (var item in Model.Vozila)
    {
        <tr>
            <td>
                @if (User.IsInRole("Owner"))
                {
                    if (item.SopstvenikId == ViewBag.SopstvenikId)
                    {
                        <a href="/Voziloes/Details/@item.VoziloId"><h4>@item.ModelName</h4></a>
                    }
                }
                else
                {
                    <a href="/Voziloes/Details/@item.VoziloId"><h4>@item.ModelName</h4></a>
                }
            </td>

        </tr>
    }

</table>

<br />
<a href="/Kategorijas/Index"><h5>Назад кон категории</h5></a>