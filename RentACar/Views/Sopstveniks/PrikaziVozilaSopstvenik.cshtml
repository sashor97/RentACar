@model RentACar.Models.Sopstvenik
@{
    ViewBag.Title = "PrikaziVozilaSopstvenik";
}

<h2>Возила што припаѓаат на сопственикот <b>@Model.Name</b> се:</h2>

<table>
    @foreach (var item in Model.Vozila)
    {
        <tr>
            <td>
               
                    <a href="/Voziloes/Details/@item.VoziloId"><h4>@item.ModelName</h4></a>
                
            </td>

        </tr>
    }

</table>

<br />
<a href="/Sopstveniks/Index"><h5>Назад кон сопственици</h5></a>