@model IEnumerable<RentACar.Models.Sopstvenik>

@{
    ViewBag.Title = "Index";
}

@if (User.IsInRole("Owner"))
{
    <h2>Лични податоци</h2>
}
else
{
    <h2>Сопственици</h2>
}


<p>
</p>
<table id="tabela" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>Емаил</th>
            <th>Опции</th>

            @if (!User.IsInRole("Owner"))
            {
                <td><b>Возила</b></td>

            }

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @if (User.IsInRole("Administrator"))
                    {

                        @Html.ActionLink("Delete", "Delete", new { id = item.SopstvenikId }) <span> | </span>
                    }

                    @if (User.IsInRole("Administrator") || User.IsInRole("Owner"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.SopstvenikId }) <span> | </span>
                    }

                    @Html.ActionLink("Details", "Details", new { id = item.SopstvenikId })
                </td>


                @if (!User.IsInRole("Owner"))
                {
                    <td><a href="/Sopstveniks/PrikaziVozilaSopstvenik?id=@item.SopstvenikId">Види возила(@item.Vozila.Count().ToString())</a></td>

                }


            </tr>
        }
    </tbody>

</table>

@section Scripts{

    <script>
        $(document).ready(function () {
            $("#tabela").DataTable();
        });
    </script>

}