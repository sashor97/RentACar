@model IEnumerable<RentACar.Models.Proizvoditel>

@{
    ViewBag.Title = "Index";
}

<h2>Производители</h2>

<p>
    @if (User.IsInRole("Administrator"))
    {
        @Html.ActionLink("Create New", "Create");
    }

</p>
<table id="tabela" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th></th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (User.IsInRole("Owner"))
                    {
                    <a href="/Proizvoditels/PrikaziVozilaProizvoditel/@item.ProizvoditelId">@item.Name (@item.Vozila.Where(v => v.SopstvenikId == ViewBag.SopstvenikId).Count().ToString())</a>
                    }
                    else
                    {
                        <a href="/Proizvoditels/PrikaziVozilaProizvoditel/@item.ProizvoditelId">@item.Name (@item.Vozila.Count.ToString())</a>
                    }


                </td>

                <td>
                    @if (User.IsInRole("Administrator"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.ProizvoditelId }) <span> | </span>

                        @Html.ActionLink("Delete", "Delete", new { id = item.ProizvoditelId }) <span> | </span>
                    }


                    @Html.ActionLink("Details", "Details", new { id = item.ProizvoditelId })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{

    <script>
        $(document).ready(function () {
            $("#tabela").DataTable();
        });
    </script>

}
